<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--MainTheme App-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="titleTextColor">@color/colorWhite</item>
    </style>

    <!--Default button style-->
    <style name="button_default" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!--Toolbar-->
    <style name="toolbar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>


    <!--NavigationHeader-->
    <!--LinearLayout for a NavigationHeader-->
    <style name="llNavHeader">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <!--TextView Login for a NavigationHeader-->
    <style name="txtLoginNavHeader" parent="android:style/TextAppearance.Medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:text">@string/account_name</item>
    </style>
    <!--TextView Email for a NavigationHeader-->
    <style name="txtEmailNavHeader">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:text">@string/account_email</item>
    </style>
    <!--ImageView Account for a NavigationHeader-->
    <style name="imgAccount">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:src">@mipmap/ic_account</item>
    </style>


    <!--CategoryFragment/TypeFragment-->
    <!--LinearLayout for a list item-->
    <style name="llCategoryItem">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:showDividers">end</item>
    </style>
    <!--List header-->
    <style name="txtCategoryName" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <!--Text list item-->
    <style name="txtCategoryItem" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <!--Image list Item-->
    <style name="imgCategoryItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>


    <!--Floating Action Button-->
    <style name="fab" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:src">@mipmap/ic_plus</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="rippleColor">@color/colorWhite</item>
        <item name="fabSize">normal</item>
    </style>


    <!--LoginActivity-->
    <!--TextInputLayout Login-->
    <style name="login_layout" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <!--EditText with Hint-->
    <style name="edit_text_hint" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:ellipsize">none</item>
    </style>
    <!--EditText username with Hint-->
    <style name="edit_text_username" parent="edit_text_hint">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:hint">@string/hint_username</item>
    </style>
    <!--EditText password with Hint-->
    <style name="edit_text_password" parent="edit_text_hint">
        <item name="android:inputType">textPassword</item>
        <item name="android:hint">@string/hint_password</item>
    </style>
    <!--Button Sign In-->
    <style name="btn_sign_in" parent="button_default">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:text">@string/sign_in</item>
    </style>
    <!--TextView Fogot Passwort-->
    <style name="text_view_fogot_password">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:text">@string/fogot_password</item>

    </style>
    <!--Button Registration-->
    <style name="btn_registration" parent="button_default">
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:text">@string/registration</item>
    </style>
</resources>
